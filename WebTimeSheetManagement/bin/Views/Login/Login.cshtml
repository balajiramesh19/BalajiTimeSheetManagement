@model WebTimeSheetManagement.Models.LoginViewModel
@using CaptchaMvc.HtmlHelpers  
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>

    #CaptchaInputText {
        text-transform: uppercase;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login-panel">
        @if (ViewBag.errormessage != null)
        {
            <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
        }
      
        <div class="form-group">
            <div class="col-md-12 col-xs-12">
               <img src="https://tresume.us/img_Home/Tresume_White_transparent.png" />
            </div>
        </div>

        @Html.ValidationSummary(true,"", new { @class = "text-danger" })

        
        <div class="form-group">
            
            <div class="col-md-12 col-xs-12">
                @Html.LabelFor(model => model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 20, Style = "border-radius:10px;" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          
            <div class="col-md-12 col-xs-12" style="border-radius:4px">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = 30 ,Style= "border-radius:10px;" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
           
            <div class="col-md-12 col-xs-12">
                <div id="captcha" class="captcha" style="border-radius:40px">
                    @Html.Label("Captcha")
